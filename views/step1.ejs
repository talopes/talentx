 <script>
  const cepInput = document.getElementById("cep");
  const bairroInput = document.getElementById("bairro");
  const cidadeInput = document.getElementById("cidade");
  const estadoInput = document.getElementById("estado");
  const buscarBtn = document.getElementById("buscar-cep");

  function buscarEndereco(cep) {
    const cleanCep = cep.replace(/\D/g, "");
    if (cleanCep.length === 8) {
      return fetch(`https://viacep.com.br/ws/${cleanCep}/json/`)
        .then(response => response.json())
        .then(data => {
          if (!data.erro) {
            bairroInput.value = data.bairro || "";
            cidadeInput.value = data.localidade || "";
            estadoInput.value = data.uf || "";
          } else {
            alert("CEP inv√°lido.");
          }
        });
    } else {
      alert("Voc√™ precisa preencher os dados antes de avan√ßar na miss√£o!");
    }
  }

  // Bot√£o lupa
  buscarBtn.addEventListener("click", () => {
    buscarEndereco(cepInput.value);
  });

  // Bloquear Enter de enviar o formul√°rio automaticamente
  document.querySelector("form").addEventListener("keydown", (e) => {
    if (e.key === "Enter") {
      e.preventDefault();
    }
  });

  // Valida√ß√£o completa ao enviar
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', async event => {
        await buscarEndereco(cepInput.value);

        if (!form.checkValidity() ||
            bairroInput.value === "" ||
            cidadeInput.value === "" ||
            estadoInput.value === "") {
          event.preventDefault();
          event.stopPropagation();
          alert("Preencha todos os campos obrigat√≥rios e clique na lupa para buscar o endere√ßo.");
        }

        form.classList.add('was-validated');
      }, false);
    });
  })();
